{
  "name": "@dkwd/dk-a11y",
  "version": "0.0.1",
  "description": "Support library to enhance and simplify common Accessibility functions",
  "author": "Damian Keeghan",
  "license": "MIT",
  "main": "index.js",
  "module": "index.js",
  "engines": {
    "node": ">= 15.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dkeeghan/dk-a11y"
  },
  "bugs": {
    "url": "https://github.com/dkeeghan/dk-a11y/issues"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "last 2 iOS versions",
    "last 3 Android versions",
    "last 2 Samsung versions",
    "not dead"
  ],
  "scripts": {
    "start": "web-dev-server --app-index docs/index.html --node-resolve --watch --open ",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier"
  },
  "devDependencies": {
    "@deloitte-digital-au/eslint-config": "^3.4.0",
    "@web/dev-server": "^0.1.8",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  },
  "eslintConfig": {
    "extends": [
      "@deloitte-digital-au/eslint-config"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
